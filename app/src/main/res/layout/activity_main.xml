<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:id="@+id/linerLayout_manager1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinerLayoutManager-vertical"/>
    <Button
        android:id="@+id/linerLayout_manager2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LinerLayoutManager-horizontal"/>
    <Button
        android:id="@+id/gridLayout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GridLayoutManager"/>
    <Button
        android:id="@+id/staggeredGridLayout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StaggeredGridLayoutManager"/>
    <Button
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="swipe_refresh_layout"/>
    <Button
        android:id="@+id/swipe_refresh_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="swipe_refresh_recycler_view[封装]"/>
</LinearLayout>
